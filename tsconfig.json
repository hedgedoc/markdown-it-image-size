{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "esnext"
    ],
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": true,
    "removeComments": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "allowJs": true
  },
  "include": ["src"],
  "files": [
    "src/index.ts"
  ]
}
